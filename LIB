    if _G.AntiAFK then VU:Button2Down(Vector2.new(0,0),CFrame.new()); task.wait(1); VU:Button2Up(Vector2.new(0,0),CFrame.new()) end
end)

SecMisc:AddToggle({
    Name="Hide GUI", Description="Blendet andere GUIs aus", Default=false,
    Callback=function(v)
        for _,g in pairs(LocalPlayer.PlayerGui:GetChildren()) do
            if g.Name~="SpeedLib" and g:IsA("ScreenGui") then g.Enabled=not v end
        end
    end
})
SecMisc:AddKeybind({
    Name="Panic Key (Hub verstecken)", Default=Enum.KeyCode.Delete,
    Callback=function()
        local sg=CoreGui:FindFirstChild("SpeedLib")
        if sg then sg.Enabled=not sg.Enabled end
    end
})
SecMisc:AddButton({
    Name="Alle Sounds stoppen", ButtonText="Stop",
    Callback=function()
        for _,s in pairs(workspace:GetDescendants()) do
            if s:IsA("Sound") then s:Stop() end
        end
        Win:Notify({Title="Sounds",Message="Alle Sounds gestoppt.",Type="Info",Duration=2})
    end
})

