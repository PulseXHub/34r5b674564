            Corner(Badge,4)
            local IL=New("Frame",{Size=UDim2.new(1,0,0,0),Position=UDim2.new(0,0,0,32),AutomaticSize=Enum.AutomaticSize.Y,BackgroundTransparency=1,ZIndex=6,Parent=SF})
            New("UIListLayout",{SortOrder=Enum.SortOrder.LayoutOrder,Padding=UDim.new(0,0),Parent=IL})
