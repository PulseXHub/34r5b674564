--                     HUB SCRIPT
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

local RunService  = game:GetService("RunService")
local Lighting    = game:GetService("Lighting")

local function GetChar()  return LocalPlayer.Character end
local function GetHum()   return GetChar() and GetChar():FindFirstChildOfClass("Humanoid") end
local function GetRoot()  return GetChar() and GetChar():FindFirstChild("HumanoidRootPart") end

-- Window
local Win = SpeedLib:CreateWindow({
    Title     = "âš¡ Speed Hub",
    Version   = "v2.0",
    Theme     = "Dark",
    ToggleKey = Enum.KeyCode.RightShift,
})

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
--  TAB: PLAYER
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local TabPlayer = Win:CreateTab("Player", "ğŸ‘¤")

local SecMove = TabPlayer:CreateSection("Movement")

SecMove:AddSlider({
    Name="Walk Speed", Min=16, Max=500, Default=16,
    Callback=function(v) if GetHum() then GetHum().WalkSpeed=v end end
})
SecMove:AddSlider({
    Name="Jump Power", Min=7, Max=500, Default=7,
    Callback=function(v) if GetHum() then GetHum().JumpPower=v end end
})
SecMove:AddToggle({
    Name="Infinite Jump", Default=false,
    Callback=function(v) _G.InfJump=v end
})
UserInputService.JumpRequest:Connect(function()
    if _G.InfJump and GetHum() then GetHum():ChangeState(Enum.HumanoidStateType.Jumping) end
end)

SecMove:AddToggle({
    Name="No Clip", Default=false,
    Callback=function(v) _G.NoClip=v end
})
RunService.Stepped:Connect(function()
    if _G.NoClip and GetChar() then
        for _,p in pairs(GetChar():GetDescendants()) do
            if p:IsA("BasePart") then p.CanCollide=false end
        end
    end
end)

SecMove:AddToggle({
    Name="Speed Boost", Description="Automatischer Speed Hack", Default=false,
    Callback=function(v)
        _G.SpeedBoost=v
        if GetHum() then GetHum().WalkSpeed = v and 100 or 16 end
    end
})
SecMove:AddButton({
    Name="Reset Charakter", ButtonText="Reset",
    Callback=function()
        if GetHum() then GetHum().Health=0 end
        Win:Notify({Title="Reset",Message="Charakter resettet.",Type="Warning",Duration=3})
    end
})

local SecCombat = TabPlayer:CreateSection("Combat")

SecCombat:AddToggle({
    Name="God Mode", Default=false,
    Callback=function(v)
        _G.GodMode=v
        if GetHum() then
            GetHum().MaxHealth = v and math.huge or 100
            GetHum().Health    = v and math.huge or 100
        end
        Win:Notify({Title=v and "God Mode AN" or "God Mode AUS",Message=v and "Du bist unverwundbar!" or "Deaktiviert.",Type=v and "Success" or "Warning",Duration=3})
    end
})
SecCombat:AddToggle({
    Name="Anti Knock", Default=false,
    Callback=function(v) _G.AntiKnock=v end
})
RunService.Heartbeat:Connect(function()
    if _G.AntiKnock and GetRoot() then GetRoot().AssemblyAngularVelocity=Vector3.zero end
end)

SecCombat:AddSlider({
    Name="Hit Distance", Min=5, Max=150, Default=5,
    Callback=function(v) _G.HitDist=v end
})
SecCombat:AddButton({
    Name="Kill All", Description="Alle Spieler tÃ¶ten", ButtonText="Kill",
    Callback=function()
        for _,p in pairs(Players:GetPlayers()) do
            if p~=LocalPlayer and p.Character then
                local h=p.Character:FindFirstChildOfClass("Humanoid")
                if h then h.Health=0 end
            end
        end
        Win:Notify({Title="Kill All",Message="Alle eliminiert.",Type="Success",Duration=3})
    end
})

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
--  TAB: VISUAL
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local TabVisual = Win:CreateTab("Visual", "ğŸ‘")

local SecESP = TabVisual:CreateSection("ESP")

SecESP:AddToggle({
    Name="Player ESP", Default=false,
    Callback=function(v)
        _G.ESP=v
        if not v then
            for _,p in pairs(Players:GetPlayers()) do
                if p~=LocalPlayer and p.Character then
                    local hl=p.Character:FindFirstChild("ESP_HL")
                    if hl then hl:Destroy() end
                end
            end
        end
        Win:Notify({Title="ESP",Message=v and "ESP aktiviert." or "ESP deaktiviert.",Type=v and "Success" or "Warning",Duration=2})
    end
})
RunService.Heartbeat:Connect(function()
    if not _G.ESP then return end
    for _,p in pairs(Players:GetPlayers()) do
        if p~=LocalPlayer and p.Character and not p.Character:FindFirstChild("ESP_HL") then
            local hl=Instance.new("Highlight")
            hl.Name="ESP_HL"; hl.FillColor=_G.ESPColor or Color3.fromRGB(255,50,50)
            hl.OutlineColor=Color3.fromRGB(255,255,255); hl.FillTransparency=0.5; hl.Parent=p.Character
        end
    end
end)

SecESP:AddDropdown({
    Name="ESP Farbe",
    Options={"Rot","GrÃ¼n","Blau","Gelb","Orange","Lila"},
    Default="Rot",
    Callback=function(v)
        local c={Rot=Color3.fromRGB(255,50,50),GrÃ¼n=Color3.fromRGB(50,255,100),Blau=Color3.fromRGB(50,100,255),Gelb=Color3.fromRGB(255,255,50),Orange=Color3.fromRGB(255,140,0),Lila=Color3.fromRGB(180,50,255)}
        _G.ESPColor=c[v]
        Win:Notify({Title="ESP Farbe",Message=v.." ausgewÃ¤hlt.",Type="Info",Duration=2})
    end
})

local SecWorld = TabVisual:CreateSection("World")

SecWorld:AddToggle({
    Name="Fullbright", Default=false,
    Callback=function(v)
        Lighting.Ambient        = v and Color3.fromRGB(255,255,255) or Color3.fromRGB(70,70,70)
        Lighting.OutdoorAmbient = v and Color3.fromRGB(255,255,255) or Color3.fromRGB(127,127,127)
        Lighting.Brightness     = v and 2 or 1
    end
})
SecWorld:AddToggle({
    Name="No Fog", Default=false,
    Callback=function(v) Lighting.FogEnd=v and 999999 or 1000 end
})
SecWorld:AddSlider({
    Name="Zeit", Min=0, Max=24, Default=14, Increment=1,
    Callback=function(v) Lighting.TimeOfDay=string.format("%02d:00:00",v) end
})
SecWorld:AddDropdown({
    Name="Wetter",
    Options={"Normal","Nacht","Sonnenuntergang","Mitternacht"},
    Default="Normal",
    Callback=function(v)
        if v=="Normal" then Lighting.TimeOfDay="14:00:00"
        elseif v=="Nacht" then Lighting.TimeOfDay="20:00:00"
        elseif v=="Sonnenuntergang" then Lighting.TimeOfDay="18:30:00"
        elseif v=="Mitternacht" then Lighting.TimeOfDay="00:00:00" end
        Win:Notify({Title="Wetter",Message=v.." aktiviert.",Type="Info",Duration=2})
    end
})

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
--  TAB: TELEPORT
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local TabTP = Win:CreateTab("Teleport", "ğŸŒ€")

local SecTP = TabTP:CreateSection("Teleport")

SecTP:AddButton({
    Name="Zum Spawn", Description="Teleportiert zu 0,5,0", ButtonText="TP",
    Callback=function()
        if GetRoot() then GetRoot().CFrame=CFrame.new(0,5,0) end
        Win:Notify({Title="Teleport",Message="Zu Spawn teleportiert!",Type="Success",Duration=2})
    end
})
SecTP:AddButton({
    Name="Random Position", Description="ZufÃ¤llige Stelle auf der Map", ButtonText="TP",
    Callback=function()
        if GetRoot() then GetRoot().CFrame=CFrame.new(math.random(-500,500),50,math.random(-500,500)) end
        Win:Notify({Title="Random TP",Message="Irgendwo teleportiert!",Type="Info",Duration=2})
    end
})
SecTP:AddButton({
    Name="Hoch teleportieren", Description="Fliegt 300 Studs nach oben", ButtonText="TP",
    Callback=function()
        if GetRoot() then GetRoot().CFrame=GetRoot().CFrame+Vector3.new(0,300,0) end
    end
})

local SecTPPlyr = TabTP:CreateSection("Zu Spieler")

local function GetPlayerList()
    local t={}
    for _,p in pairs(Players:GetPlayers()) do
        if p~=LocalPlayer then table.insert(t,p.Name) end
    end
    return #t>0 and t or {"Kein Spieler"}
end

SecTPPlyr:AddDropdown({
    Name="Spieler",
    Options=GetPlayerList(),
    Default=GetPlayerList()[1],
    Callback=function(v) _G.TPTarget=v end
})
SecTPPlyr:AddButton({
    Name="Zu Spieler teleportieren", ButtonText="TP",
    Callback=function()
        local t=Players:FindFirstChild(_G.TPTarget or "")
        if t and t.Character and t.Character:FindFirstChild("HumanoidRootPart") and GetRoot() then
            GetRoot().CFrame=t.Character.HumanoidRootPart.CFrame+Vector3.new(3,0,0)
            Win:Notify({Title="Teleport",Message="Zu "..(_G.TPTarget or "?").." teleportiert!",Type="Success",Duration=3})
        else
            Win:Notify({Title="Fehler",Message="Spieler nicht gefunden!",Type="Error",Duration=3})
        end
    end
})

