                    Tween(b,{BackgroundColor3=Color3.fromRGB(255,255,255),TextColor3=T.Accent},0.06)
                    task.delay(0.12,function() Tween(b,{BackgroundColor3=T.Accent,TextColor3=T.BG},0.12) end)
                    if cfg.Callback then cfg.Callback() end
                end); ov.ZIndex=10
            end

            function Sec:AddToggle(cfg)
                cfg=cfg or {}; local state=cfg.Default==true
                local r,ov=Row(cfg.Description and 48 or 42); RLabel(r,cfg.Name,cfg.Description)
                local tr=New("Frame",{Size=UDim2.new(0,46,0,24),Position=UDim2.new(1,-58,0.5,-12),BackgroundColor3=state and T.Accent or T.Input,BorderSizePixel=0,ZIndex=9,Parent=r})
                Corner(tr,12); Stroke(tr,state and T.Accent or T.BorderBright,1)
                local kn=New("Frame",{Size=UDim2.new(0,18,0,18),Position=state and UDim2.new(1,-21,0.5,-9) or UDim2.new(0,3,0.5,-9),BackgroundColor3=Color3.fromRGB(255,255,255),BorderSizePixel=0,ZIndex=10,Parent=tr})
                Corner(kn,9)
                local dot=New("TextLabel",{Text=state and "ON" or "OFF",Font=Enum.Font.GothamBold,TextSize=8,TextColor3=state and T.Accent or T.TextMuted,Size=UDim2.new(0,28,0,14),Position=UDim2.new(1,-90,0.5,-7),BackgroundTransparency=1,ZIndex=9,Parent=r})
                local function Set(v)
                    state=v; Tween(tr,{BackgroundColor3=state and T.Accent or T.Input},0.2)
                    Tween(kn,{Position=state and UDim2.new(1,-21,0.5,-9) or UDim2.new(0,3,0.5,-9)},0.2,Enum.EasingStyle.Back)
                    dot.Text=state and "ON" or "OFF"; Tween(dot,{TextColor3=state and T.Accent or T.TextMuted},0.15)
                    if cfg.Callback then cfg.Callback(state) end
                end
                ov.MouseButton1Click:Connect(function() Set(not state) end); ov.ZIndex=10
                local o={}; function o:Set(v) Set(v) end; function o:Get() return state end; return o
            end

            function Sec:AddSlider(cfg)
                cfg=cfg or {}
                local mn,mx=cfg.Min or 0,cfg.Max or 100; local inc=cfg.Increment or 1
                local val=math.clamp(cfg.Default or mn,mn,mx); local drag=false
                local r=New("Frame",{Size=UDim2.new(1,0,0,56),BackgroundTransparency=1,BorderSizePixel=0,ZIndex=7,Parent=IL})
                New("Frame",{Size=UDim2.new(1,-20,0,1),Position=UDim2.new(0,10,0,0),BackgroundColor3=T.Border,BorderSizePixel=0,ZIndex=7,Parent=r}); Count()
                New("TextLabel",{Text=cfg.Name or "Slider",Font=Enum.Font.GothamBold,TextSize=12,TextColor3=T.Text,Size=UDim2.new(0.6,0,0,18),Position=UDim2.new(0,14,0,8),BackgroundTransparency=1,TextXAlignment=Enum.TextXAlignment.Left,ZIndex=8,Parent=r})
                local vl=New("TextLabel",{Text=tostring(val),Font=Enum.Font.GothamBold,TextSize=12,TextColor3=T.Accent,Size=UDim2.new(0.4,-10,0,18),Position=UDim2.new(0.6,0,0,8),BackgroundTransparency=1,TextXAlignment=Enum.TextXAlignment.Right,ZIndex=8,Parent=r})
                local tb=New("Frame",{Size=UDim2.new(1,-28,0,5),Position=UDim2.new(0,14,0,36),BackgroundColor3=T.Input,BorderSizePixel=0,ZIndex=8,Parent=r}); Corner(tb,3)
                local p0=(val-mn)/(mx-mn)
                local fl=New("Frame",{Size=UDim2.new(p0,0,1,0),BackgroundColor3=T.Accent,BorderSizePixel=0,ZIndex=9,Parent=tb}); Corner(fl,3)
                local kn=New("Frame",{Size=UDim2.new(0,13,0,13),Position=UDim2.new(p0,-6,0.5,-6),BackgroundColor3=Color3.fromRGB(255,255,255),BorderSizePixel=0,ZIndex=10,Parent=tb}); Corner(kn,7); Stroke(kn,T.Accent,1.5)
                local function Upd(mx_)
                    local rel=math.clamp((mx_-tb.AbsolutePosition.X)/tb.AbsoluteSize.X,0,1)
                    val=math.clamp(math.round((mn+(mx-mn)*rel)/inc)*inc,mn,mx)
                    local p=(val-mn)/(mx-mn); fl.Size=UDim2.new(p,0,1,0); kn.Position=UDim2.new(p,-6,0.5,-6); vl.Text=tostring(val)
                    if cfg.Callback then cfg.Callback(val) end
                end
                tb.InputBegan:Connect(function(i) if i.UserInputType==Enum.UserInputType.MouseButton1 then drag=true; Upd(i.Position.X) end end)
                UserInputService.InputChanged:Connect(function(i) if drag and i.UserInputType==Enum.UserInputType.MouseMovement then Upd(i.Position.X) end end)
                UserInputService.InputEnded:Connect(function(i) if i.UserInputType==Enum.UserInputType.MouseButton1 then drag=false end end)
                local o={}; function o:Set(v) val=math.clamp(math.round(v/inc)*inc,mn,mx); local p=(val-mn)/(mx-mn); fl.Size=UDim2.new(p,0,1,0); kn.Position=UDim2.new(p,-6,0.5,-6); vl.Text=tostring(val) end; function o:Get() return val end; return o
            end

            function Sec:AddDropdown(cfg)
                cfg=cfg or {}; local opts=cfg.Options or {}; local sel=cfg.Default or (opts[1] or ""); local open=false
                local r,ov=Row(cfg.Description and 48 or 42); RLabel(r,cfg.Name,cfg.Description); ov.ZIndex=2
                local db=New("TextButton",{Text=sel.."  â–¾",Font=Enum.Font.Gotham,TextSize=11,TextColor3=T.Text,Size=UDim2.new(0,120,0,26),Position=UDim2.new(1,-132,0.5,-13),BackgroundColor3=T.Input,BorderSizePixel=0,ZIndex=9,Parent=r})
                Corner(db,6); Stroke(db,T.Border,1)
                local dl=New("Frame",{Size=UDim2.new(0,120,0,0),Position=UDim2.new(1,-132,1,4),BackgroundColor3=T.TopBar,BorderSizePixel=0,ClipsDescendants=true,ZIndex=50,Visible=false,Parent=r})
                Corner(dl,6); Stroke(dl,T.Border,1); New("UIListLayout",{SortOrder=Enum.SortOrder.LayoutOrder,Parent=dl})
                for _,op in ipairs(opts) do
                    local ob=New("TextButton",{Text="  "..op,Font=Enum.Font.Gotham,TextSize=11,TextColor3=op==sel and T.Accent or T.Text,Size=UDim2.new(1,0,0,26),BackgroundColor3=T.TopBar,BackgroundTransparency=1,BorderSizePixel=0,TextXAlignment=Enum.TextXAlignment.Left,ZIndex=51,Parent=dl})
                    ob.MouseEnter:Connect(function() Tween(ob,{BackgroundTransparency=0,BackgroundColor3=T.AccentDim,TextColor3=T.Accent},0.1) end)
                    ob.MouseLeave:Connect(function() Tween(ob,{BackgroundTransparency=1,TextColor3=(op==sel and T.Accent or T.Text)},0.1) end)
                    ob.MouseButton1Click:Connect(function()
                        sel=op; db.Text=op.."  â–¾"; open=false
                        Tween(dl,{Size=UDim2.new(0,120,0,0)},0.12); task.delay(0.13,function() dl.Visible=false end)
                        if cfg.Callback then cfg.Callback(op) end
                    end)
                end
                db.MouseButton1Click:Connect(function()
                    open=not open
                    if open then dl.Visible=true; Tween(dl,{Size=UDim2.new(0,120,0,#opts*26)},0.15,Enum.EasingStyle.Back,Enum.EasingDirection.Out)
                    else Tween(dl,{Size=UDim2.new(0,120,0,0)},0.1); task.delay(0.11,function() dl.Visible=false end) end
                end)
                local o={}; function o:Set(v) sel=v; db.Text=v.."  â–¾" end; function o:Get() return sel end; return o
            end

            function Sec:AddTextbox(cfg)
                cfg=cfg or {}; local r,ov=Row(42); RLabel(r,cfg.Name,nil)
                local ib=New("Frame",{Size=UDim2.new(0,145,0,26),Position=UDim2.new(1,-157,0.5,-13),BackgroundColor3=T.Input,BorderSizePixel=0,ZIndex=9,Parent=r}); Corner(ib,6)
                local sk=Stroke(ib,T.Border,1)
                local tb2=New("TextBox",{Text="",PlaceholderText=cfg.Placeholder or "Eingeben...",Font=Enum.Font.Gotham,TextSize=11,TextColor3=T.Text,PlaceholderColor3=T.TextMuted,Size=UDim2.new(1,-12,1,0),Position=UDim2.new(0,6,0,0),BackgroundTransparency=1,ClearTextOnFocus=cfg.ClearOnFocus~=false,ZIndex=10,Parent=ib})
                tb2.Focused:Connect(function() Tween(sk,{Color=T.Accent},0.15) end)
                tb2.FocusLost:Connect(function(e) Tween(sk,{Color=T.Border},0.15); if e and cfg.Callback then cfg.Callback(tb2.Text) end end)
                ov.ZIndex=10; return tb2
            end

            function Sec:AddKeybind(cfg)
                cfg=cfg or {}; local key=cfg.Default or Enum.KeyCode.Unknown; local listen=false
                local r,ov=Row(42); RLabel(r,cfg.Name,nil)
                local kb=New("TextButton",{Text="["..tostring(key.Name):gsub("Enum.KeyCode.","").."]",Font=Enum.Font.GothamBold,TextSize=11,TextColor3=T.Accent,Size=UDim2.new(0,90,0,26),Position=UDim2.new(1,-102,0.5,-13),BackgroundColor3=T.AccentDim,BorderSizePixel=0,ZIndex=9,Parent=r})
                Corner(kb,6)
                kb.MouseButton1Click:Connect(function()
                    if listen then return end; listen=true; kb.Text="[ ... ]"; Tween(kb,{BackgroundColor3=T.Input},0.1)
                    local c; c=UserInputService.InputBegan:Connect(function(i,g)
                        if not g and i.UserInputType==Enum.UserInputType.Keyboard then
                            key=i.KeyCode; kb.Text="["..tostring(key.Name):gsub("Enum.KeyCode.","").."]"
                            Tween(kb,{BackgroundColor3=T.AccentDim},0.1); listen=false; c:Disconnect()
                        end
                    end)
                end)
                UserInputService.InputBegan:Connect(function(i,g) if not g and not listen and i.KeyCode==key and cfg.Callback then cfg.Callback() end end)
                local o={}; function o:Set(k) key=k; kb.Text="["..tostring(k.Name):gsub("Enum.KeyCode.","").."]" end; return o
            end

            function Sec:AddLabel(text,color)
                local r=New("Frame",{Size=UDim2.new(1,0,0,32),BackgroundTransparency=1,ZIndex=7,Parent=IL})
                New("Frame",{Size=UDim2.new(1,-20,0,1),Position=UDim2.new(0,10,0,0),BackgroundColor3=T.Border,BorderSizePixel=0,ZIndex=7,Parent=r})
                New("TextLabel",{Text=text or "Label",Font=Enum.Font.Gotham,TextSize=11,TextColor3=color or T.TextDim,Size=UDim2.new(1,-20,1,0),Position=UDim2.new(0,14,0,0),BackgroundTransparency=1,TextXAlignment=Enum.TextXAlignment.Left,ZIndex=8,Parent=r}); Count()
            end

            function Sec:AddSeparator()
                New("Frame",{Size=UDim2.new(1,-20,0,1),BackgroundColor3=T.BorderBright,BorderSizePixel=0,ZIndex=8,Parent=IL})
            end

            table.insert(Tab.Sections,Sec); return Sec
        end
        return Tab
    end

    local ND={Success={c=Color3.fromRGB(50,200,100),i="âœ…"},Error={c=Color3.fromRGB(255,55,55),i="âŒ"},Warning={c=Color3.fromRGB(255,180,30),i="âš "},Info={c=Color3.fromRGB(80,150,255),i="â„¹"}}
    function W:Notify(cfg)
        cfg=cfg or {}; local d=cfg.Duration or 4; local td=ND[cfg.Type] or ND.Info; local col=td.c
        local nf=New("Frame",{Size=UDim2.new(1,0,0,72),BackgroundColor3=T.Card,BackgroundTransparency=1,BorderSizePixel=0,ClipsDescendants=true,ZIndex=201,Parent=NHolder})
        Corner(nf,8); Stroke(nf,T.Border,1)
        New("Frame",{Size=UDim2.new(0,3,1,0),BackgroundColor3=col,BorderSizePixel=0,ZIndex=202,Parent=nf})
        New("TextLabel",{Text=td.i.."  "..(cfg.Title or "Info"),Font=Enum.Font.GothamBold,TextSize=13,TextColor3=col,Size=UDim2.new(1,-18,0,22),Position=UDim2.new(0,14,0,10),BackgroundTransparency=1,TextXAlignment=Enum.TextXAlignment.Left,ZIndex=202,Parent=nf})
        New("TextLabel",{Text=cfg.Message or "",Font=Enum.Font.Gotham,TextSize=11,TextColor3=T.TextDim,Size=UDim2.new(1,-18,0,28),Position=UDim2.new(0,14,0,32),BackgroundTransparency=1,TextXAlignment=Enum.TextXAlignment.Left,TextWrapped=true,ZIndex=202,Parent=nf})
        local pb=New("Frame",{Size=UDim2.new(1,-14,0,2),Position=UDim2.new(0,7,1,-4),BackgroundColor3=T.Input,BorderSizePixel=0,ZIndex=202,Parent=nf}); Corner(pb,1)
        local pg=New("Frame",{Size=UDim2.new(1,0,1,0),BackgroundColor3=col,BorderSizePixel=0,ZIndex=203,Parent=pb}); Corner(pg,1)
        Tween(nf,{BackgroundTransparency=0},0.2); Tween(pg,{Size=UDim2.new(0,0,1,0)},d,Enum.EasingStyle.Linear)
        task.delay(d,function() Tween(nf,{Size=UDim2.new(1,0,0,0),BackgroundTransparency=1},0.25); task.delay(0.27,function() nf:Destroy() end) end)
    end

    return W
end

